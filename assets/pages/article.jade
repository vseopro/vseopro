extends _layout

block content
  //- include components/_hot-news

  .container
    .row
      .col-md-8
        .white-block
          h1.white-block__title.mt0 ClipBucket v.2.7.5 Rus + All Plugins + All
          article.article
            include ../components/article-header/_article-header
            include ../components/article-content/_article-content
            include ../components/article-share/_article-share
            include ../components/article-footer/_article-footer

        //- include components/_click-block

        include ../components/news-similar/_news-similar

        div(block="white-block")
          h4(elem="title") <span class="icon-comment-1"></span> Комментарии
          div(block="comment-block")
            -for(var i = 0; i < 5; i++)
              div(elem="item")
                include ../components/comment-meta/_comment-meta
                span(elem="text") #{text[Math.floor(Math.random() * ((text.length-1) - 0 + 1)) + 0]}

        a(href="#").btn.btn-orange.btn-getMoreComments.table-center Показать предыдущие комментарии

        .white-block
          h4.white-block__title.mt0 <span class="icon-plus"></span> Добавить комментарий

      .col-xs-4.visible-md.visible-lg

        // Мы рекомендуем
        include ../components/sidebar-editors-choice/_sidebar-editors-choice

        // Популярные новости
        include ../components/sidebar-popular-news/_sidebar-popular-news

        // Голосование
        include ../components/sidebar-vote/_sidebar-vote

