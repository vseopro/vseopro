      .col-xs-8(elem="col")
        span.db(elem="text") <span class="icon-user"></span> Проверенных:
      .col-xs-4(elem="col")
        span(elem="count") #{Math.floor(Math.random() * (15 - 1300) + 1300)}
      .col-xs-8(elem="col")
        span.db(elem="text") <span class="icon-user"></span> Потребителей:
      .col-xs-4(elem="col")
        span(elem="count") #{Math.floor(Math.random() * (15 - 1300) + 1300)}

