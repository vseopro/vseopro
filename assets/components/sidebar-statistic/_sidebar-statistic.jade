div(block="white-block")
  h5(elem="sidebar-title") <span class="icon-chart"></span> Статистика сайта
  div(block="site-statistic")
    .row(elem="row")
      .col-xs-9(elem="col")
        span(elem="text").db Новостей: <span elem="count">#{Math.floor(Math.random() * (15 - 1300) + 1300)}</span>
      .col-xs-3(elem="col")
        span(elem="label").db.text-right +#{Math.floor(Math.random() * (15 - 1300) + 1300)}
    .row(elem="row")
      .col-xs-9(elem="col")
        span(elem="text").db Комментариев: <span elem="count">#{Math.floor(Math.random() * (15 - 1300) + 1300)}</span>
      .col-xs-3(elem="col")
        span(elem="label").db.text-right +#{Math.floor(Math.random() * (15 - 1300) + 1300)}
